				+use2("Git", "https://git-scm.com/", "Mercurial", "https://www.mercurial-scm.org/")
				+use2("Gulp", "http://gulpjs.com/", "<b>Ferad</b>", "https://github.com/tserdyuk/ferad")
				+use1("<b>Haskell</b>", "https://www.haskell.org/")
				+use1s("Intellij IDEA", "https://www.jetbrains.com/idea/")
				+use1("Jade", "http://jade-lang.com/")
				+use2("JavaScript", "https://en.wikipedia.org/wiki/JavaScript", "ECMAScript 6 with Babel", "http://kangax.github.io/compat-table/es6/#babel")
