				+use1("<b>Node.js</b>", "https://nodejs.org/")
				+use1("Mocha", "https://mochajs.org/")
				+use1("MongoDB", "https://www.mongodb.org/")
				+use1("{{ mustache }}", "https://mustache.github.io/")
				+use1("Papertrail", "https://papertrailapp.com/")
				+use1("Parse", "https://parse.com/")
				+use1s("Perl", "https://www.perl.org/")
				+use1("rsync", "https://rsync.samba.org/")
				+use1("Scala", "http://scala-lang.org/")
				+use2("SCSS", "http://sass-lang.com/", "Sass", "http://sass-lang.com/documentation/file.INDENTED_SYNTAX.html")
				+use2s("Sublime Text", "http://www.sublimetext.com/", "Atom", "https://atom.io/")
